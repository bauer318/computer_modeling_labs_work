<Window x:Class="Graphic.PokerTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphic"
        mc:Ignorable="d"
        Title="Poker Test" Height="250" Width="170" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
            
        </Grid.RowDefinitions>
        <DataGrid x:Name="PokerTestDG" Grid.Row="0" ItemsSource="{Binding PokerTestList}"
                  HorizontalAlignment="Stretch" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="probalityClassNameColumn" Binding="{Binding ProbabilityClassName}" 
                                    Header="Веротность" CanUserResize="False"/>
                <DataGridTextColumn x:Name="probabilityClassValueColumn" Binding="{Binding ProbabilityClassValue}"
                                    Header="k = 8" CanUserResize="False"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <Button Grid.Row="1" Content="Close" Width="50" HorizontalAlignment="Right" Margin="0,0,10,0" Click="Button_Click"/>


    </Grid>
</Window>
